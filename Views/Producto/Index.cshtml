@model IEnumerable<Bodegas.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create">Crear nuevo producto</a>
</p>
<h3>Buscar Producto</h3>

<input class="form-control col-4" id="myInput" type="text" placeholder="Search..">
<br>
<table class="table table-responsive table-striped ">
    <thead>
        <tr>
            <th hidden="hidden">
                ID @* @Html.DisplayNameFor(model => model.Id_Producto)*@
            </th>
            <th>
                CODIGO @* @Html.DisplayNameFor(model => model.Id_Producto)*@
            </th>
            <th>
                PRODUCTO @*@Html.DisplayNameFor(model => model.Producto_)*@
            </th>
            <th>
                ESTADO @*@Html.DisplayNameFor(model => model.Producto_)*@
            </th>
            <th>ACCION</th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var item in Model)
        {
            <tr>
                <td hidden="hidden">
                    @Html.DisplayFor(modelItem => item.Id_Producto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto_)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo, new { @class = "form-check" })
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditarProducto", new { id = item.Id_Producto }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Eliminar", "EliminarProducto", new { id = item.Id_Producto }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
